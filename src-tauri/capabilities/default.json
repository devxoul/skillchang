{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-start-dragging",
    "store:default",
    "dialog:default",
    "window-state:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "npx",
          "cmd": "npx",
          "args": true,
          "sidecar": false
        },
        {
          "name": "pnpx",
          "cmd": "pnpx",
          "args": true,
          "sidecar": false
        },
        {
          "name": "bunx",
          "cmd": "bunx",
          "args": true,
          "sidecar": false
        }
      ]
    },
    {
      "identifier": "http:default",
      "allow": [{ "url": "https://skills.sh/*" }]
    }
  ]
}
